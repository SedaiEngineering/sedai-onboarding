{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "dynamodbreadautoscaling",
            "Effect": "Allow",
            "Action": [
                "autoscaling:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "dynamodbreadapplicationautoscaling",
            "Effect": "Allow",
            "Action": [
                "application-autoscaling:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "dynamodbreaddynamodb",
            "Effect": "Allow",
            "Action": [
                "dynamodb:List*",
                "dynamodb:Describe*"
            ],
            "Resource": "*"
        }
    ]
}