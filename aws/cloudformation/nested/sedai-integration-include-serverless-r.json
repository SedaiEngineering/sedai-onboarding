{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "serverlessreadlambda",
            "Effect": "Allow",
            "Action": [
                "lambda:Get*",
                "lambda:List*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreadstates",
            "Effect": "Allow",
            "Action": [
                "states:List*",
                "states:Get*",
                "states:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreadapigateway",
            "Effect": "Allow",
            "Action": [
                "apigateway:GET"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreadautoscaling",
            "Effect": "Allow",
            "Action": [
                "autoscaling:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreadapplicationautoscaling",
            "Effect": "Allow",
            "Action": [
                "application-autoscaling:Describe*"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreadkinesis",
            "Effect": "Allow",
            "Action": [
                "kinesis:DescribeStream",
                "kinesis:ListStreams"
            ],
            "Resource": "*"
        },
        {
            "Sid": "serverlessreaddynamodb",
            "Effect": "Allow",
            "Action": [
                "dynamodb:List*",
                "dynamodb:Describe*"
            ],
            "Resource": "*"
        }
    ]
}