		{
			"Effect": "Allow",
			"Action": ["ce:GetCost*", "ce:DescribeCost*", "ce:List*", "ce:GetReservation*", "ce:GetSavings*"],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": ["purchase-orders:Get*", "purchase-orders:List*"],
			"Resource": "*"
		}
	]
}
